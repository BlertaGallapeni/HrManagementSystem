
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- /.content-header -->
<div class="row">
    @foreach (var project in ViewBag.Projects)
    {
        <a class="col-md-3 col-sm-6 col-12" style="cursor:pointer" onclick="showTasks(@project.Value)">
            <div class="info-box bg-olive">
                <span class="info-box-icon"><i class="bi bi-file-earmark-text-fill"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@project.Text</span>

                    <span class="info-box-number">Tasks</span>

                </div>

            </div>

        </a>
    }
    
</div>

<div id="tasks">
</div>

<link rel="stylesheet" href="//cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" />
<script src="//cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>

<script>

     function showTasks(id) {
        $.get("/Admin/Task/Index", {  projectId : id}, function (result) {
            $("#tasks").html(result);
        })
    }
</script>