@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/FrontEnd/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>HRMS</b>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">@SharedLocalizer["SignInToStart"]</p>
                <div asp-validation-summary="All" class="text-danger mt-2"></div>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" id="account" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-between">
                        <div class="co">
                            <div class="icheck-primary">
                                <input type="checkbox" asp-for="RememberMe">
                                <label asp-for="RememberMe" for="remember">
                                    @SharedLocalizer["RememberMe"]
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <div class="my-3">
                        <button id="login-submit" type="submit" class="btn bg-olive btn-block">@SharedLocalizer["SignIn"]</button>
                    </div>
                </form>

                <div class="text-center">
                   
                <p>- @SharedLocalizer["OR"] -</p>
                <a href="#" class="text-secondary" style="font-size:22px">
                        <i class="bi bi-facebook mr-2"></i> 
                </a>
                    <a href="#" class="text-secondary" style="font-size:22px">
                        <i class="bi bi-google"></i> 
                </a>
                    <div class="icheck-primary text-black mt-3">
                        <a asp-action="ForgotPassword" class="text-black">@SharedLocalizer["IForgotMyPass"]</a>
                    </div>
                </div>
                <!-- /.social-auth-links -->

               
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
